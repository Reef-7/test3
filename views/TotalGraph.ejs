        <div class="container text-center">
            <h1 class="mt-5 boo-text">Histogram of Total Prices of Orders per Month</h1>
            <svg id="histogram"></svg>
        </div>

        <script>
            // Access the data passed from Express
            const data = JSON.parse('<%- data %>');

            // Prepare the data for D3.js
            const formattedData = data.map(d => ({
                month: d._id,
                totalPrice: d.totalPrice
            }));

            // Set up your D3.js visualization for the histogram
            const margin = { top: 30, right: 30, bottom: 50, left: 50 };
            const width = 600 - margin.left - margin.right;
            const height = 400 - margin.top - margin.bottom;

            const svg = d3.select("#histogram")
                .attr("width", width + margin.left + margin.right)
                .attr("height", height + margin.top + margin.bottom)
                .append("g")
                .attr("transform", "translate(" + margin.left + "," + margin.top + ")");

            const x = d3.scaleBand()
                .domain(formattedData.map(d => d.month))
                .range([0, width])
                .padding(0.1);

            const y = d3.scaleLinear()
                .domain([0, d3.max(formattedData, d => d.totalPrice)])
                .range([height, 0]);

            svg.append("g")
                .attr("class", "axis-x")
                .attr("transform", "translate(0," + height + ")")
                .call(d3.axisBottom(x));

            svg.append("g")
                .attr("class", "axis-y")
                .call(d3.axisLeft(y));

            svg.selectAll(".bar")
                .data(formattedData)
                .enter().append("rect")
                .attr("class", "bar")
                .attr("x", d => x(d.month))
                .attr("width", x.bandwidth())
                .attr("y", d => y(d.totalPrice))
                .attr("height", d => height - y(d.totalPrice));
        </script>


